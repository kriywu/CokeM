<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg" />

    <TextView
        android:id="@+id/copyright"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/copyright"
        android:layout_width="wrap_content"
        android:textColor="@color/qmui_config_color_50_white" />

    <RelativeLayout
        android:id="@+id/ad_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivADContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/splash_ad"/>


        <TextView
            android:id="@+id/btnADController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivADContent"
            android:layout_margin="16dp"
            android:background="@drawable/btn_ad_shape"
            android:padding="16dp"
            android:text="@string/skip"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>